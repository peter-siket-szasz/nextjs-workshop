{
  "ignorePatterns": ["*config.[jt]s"],
  "extends": ["next/core-web-vitals", "prettier"],
  "plugins": ["unused-imports", "prettier"],
  "rules": {
    "prettier/prettier": ["error", 
      {
        "singleQuote": true,
        "printWidth": 120,
        "tabWidth": 2,
        "jsxSingleQuote": true
      }
    ],
    "indent": ["error", 2],
    "quotes": ["error", "single"],
    "object-curly-spacing": ["error", "always"],
    "semi": ["error", "always"],
    "unused-imports/no-unused-imports": "error"
  }
}
